<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="TextBlock" x:Key="PageTitleStyle">
        <Setter Property="FontFamily" Value="ms-appx:///Assets/font/space_invaders.ttf#space_invaders" />
        <Setter Property="FontSize" Value="48" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="Margin" Value="0,40,0,20" />
        <Setter Property="HorizontalAlignment" Value="Center" />
    </Style>

    <Style TargetType="TextBlock" x:Key="ControlLabelStyle">
        <Setter Property="FontFamily" Value="ms-appx:///Assets/font/space_invaders.ttf#space_invaders" />
        <Setter Property="FontSize" Value="24" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Foreground" Value="#FF00FF" />
        <!--  Rosa choque  -->
    </Style>

    <Style TargetType="TextBlock" x:Key="ControlTextStyle">
        <Setter Property="FontFamily" Value="ms-appx:///Assets/font/space_invaders.ttf#space_invaders" />
        <Setter Property="FontSize" Value="24" />
        <Setter Property="Foreground" Value="White" />
    </Style>

    <Style
        BasedOn="{StaticResource SecondaryButtonStyle}"
        TargetType="Button"
        x:Key="ReturnButtonStyle">
        <Setter Property="Foreground" Value="#FF00FF" />
        <!--  Rosa choque  -->
        <Setter Property="Background" Value="#2A2A2A" />
        <Setter Property="BorderBrush" Value="#FF00FF" />
        <!--  Rosa choque  -->
        <Setter Property="Width" Value="300" />
        <Setter Property="Height" Value="120" />
        <Setter Property="FontSize" Value="28" />
        <Setter Property="Content" Value="Return" />
        <Setter Property="Margin" Value="0,0,0,40" />
    </Style>

</ResourceDictionary>
