<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:sys="using:System"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <RadialGradientBrush x:Key="PrimaryButtonBackgroundBrush">
        <GradientStop Color="{ThemeResource BackgroundColor}" Offset="0.1" />
        <GradientStop Color="{ThemeResource PrimaryColor}" Offset="12" />
    </RadialGradientBrush>

    <RadialGradientBrush x:Key="SecondaryButtonBackgroundBrush">
        <GradientStop Color="{ThemeResource BackgroundColor}" Offset="0.1" />
        <GradientStop Color="{ThemeResource TertiaryColor}" Offset="12" />
    </RadialGradientBrush>

    <CornerRadius x:Key="ButtonCornerRadius">178</CornerRadius>
    <Thickness x:Key="DefaultButtonPadding">2</Thickness>
    <sys:Double x:Key="DefaultBorderThickness">6 6 6 20</sys:Double>

    <sys:Double x:Key="TitleFontSize">36</sys:Double>
    <sys:Double x:Key="SubtitleFontSize">32</sys:Double>
    <FontWeight x:Key="TitleFontWeight">Bold</FontWeight>

    <Style TargetType="Button" x:Key="PrimaryButtonStyle">
        <Setter Property="Background" Value="{StaticResource PrimaryButtonBackgroundBrush}" />

        <Setter Property="Foreground">
            <Setter.Value>
                <SolidColorBrush Color="{ThemeResource OnPrimaryColor}" />
            </Setter.Value>
        </Setter>

        <Setter Property="BorderBrush">
            <Setter.Value>
                <SolidColorBrush Color="{ThemeResource PrimaryColor}" />
            </Setter.Value>
        </Setter>

        <Setter Property="BorderThickness" Value="{StaticResource DefaultBorderThickness}" />
        <Setter Property="CornerRadius" Value="{StaticResource ButtonCornerRadius}" />
        <Setter Property="Padding" Value="{StaticResource DefaultButtonPadding}" />

        <Setter Property="Width" Value="509" />
        <Setter Property="Height" Value="356" />

        <Setter Property="FontSize" Value="{StaticResource TitleFontSize}" />
        <Setter Property="FontWeight" Value="{StaticResource TitleFontWeight}" />
    </Style>

    <Style TargetType="Button" x:Key="SecondaryButtonStyle">
        <Setter Property="Background" Value="{StaticResource SecondaryButtonBackgroundBrush}" />

        <Setter Property="Foreground">
            <Setter.Value>
                <SolidColorBrush Color="{ThemeResource OnTertiaryColor}" />
            </Setter.Value>
        </Setter>

        <Setter Property="BorderBrush">
            <Setter.Value>
                <SolidColorBrush Color="{ThemeResource TertiaryColor}" />
            </Setter.Value>
        </Setter>

        <Setter Property="BorderThickness" Value="{StaticResource DefaultBorderThickness}" />
        <Setter Property="CornerRadius" Value="{StaticResource ButtonCornerRadius}" />
        <Setter Property="Padding" Value="{StaticResource DefaultButtonPadding}" />

        <Setter Property="Width" Value="450" />
        <Setter Property="Height" Value="300" />

        <Setter Property="FontSize" Value="{StaticResource SubtitleFontSize}" />
        <Setter Property="FontWeight" Value="{StaticResource TitleFontWeight}" />
    </Style>

</ResourceDictionary>
