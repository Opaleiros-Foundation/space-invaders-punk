<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sys="using:System">

    <!-- ========================================================================== -->
    <!-- Gradient Brush Definition -->
    <!-- ========================================================================== -->
    <RadialGradientBrush x:Key="PrimaryButtonBackgroundBrush">
        <GradientStop Color="{ThemeResource PrimaryColor}" Offset="0.2" />
        <GradientStop Color="{ThemeResource BackgroundColor}" Offset="1.0" />
    </RadialGradientBrush>

    <!-- ========================================================================== -->
    <!-- Sizing and Spacing (Design Tokens) -->
    <!-- ========================================================================== -->
    <CornerRadius x:Key="DefaultCornerRadius">8</CornerRadius>
    <Thickness x:Key="DefaultButtonPadding">12,6</Thickness>
    <sys:Double x:Key="DefaultBorderThickness">1</sys:Double>

    <!-- ========================================================================== -->
    <!-- Primary Button Style (The most robust approach) -->
    <!-- ========================================================================== -->
    <Style x:Key="PrimaryButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource PrimaryButtonBackgroundBrush}" />
        
        <!-- Foreground: Creates the Brush directly here to be theme-aware -->
        <Setter Property="Foreground">
            <Setter.Value>
                <SolidColorBrush Color="{ThemeResource OnPrimaryColor}" />
            </Setter.Value>
        </Setter>

        <!-- BorderBrush: Also creates the Brush here -->
        <Setter Property="BorderBrush">
            <Setter.Value>
                <SolidColorBrush Color="{ThemeResource PrimaryColor}" />
            </Setter.Value>
        </Setter>

        <!-- Sizing properties using our defined resources -->
        <Setter Property="BorderThickness" Value="{StaticResource DefaultBorderThickness}" />
        <Setter Property="CornerRadius" Value="{StaticResource DefaultCornerRadius}" />
        <Setter Property="Padding" Value="{StaticResource DefaultButtonPadding}" />
    </Style>

</ResourceDictionary>