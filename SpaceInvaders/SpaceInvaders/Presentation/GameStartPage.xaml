<Page
    x:Class="SpaceInvaders.Presentation.GameStartPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    IsTabStop="True"
    KeyDown="GameStartPage_KeyDown"
    KeyUp="GameStartPage_KeyUp">

    <Grid x:Name="RootGrid">
        <Grid.Background>
            <ImageBrush ImageSource="ms-appx:///Assets/background/background.png" Stretch="UniformToFill"/>
        </Grid.Background>

        <Canvas x:Name="GameCanvas">
            <!-- Player is now created in code-behind -->
        </Canvas>
    </Grid>
</Page>
