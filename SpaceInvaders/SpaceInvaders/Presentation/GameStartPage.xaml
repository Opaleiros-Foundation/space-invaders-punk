<Page
    x:Class="SpaceInvaders.Presentation.GameStartPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    IsTabStop="True"
    KeyDown="GameStartPage_KeyDown"
    KeyUp="GameStartPage_KeyUp">

    <Grid x:Name="RootGrid">
        <Grid.Background>
            <ImageBrush ImageSource="ms-appx:///Assets/background/background.png" Stretch="UniformToFill"/>
        </Grid.Background>

        <Canvas x:Name="GameCanvas">
            <!-- Player is now created in code-behind -->
        </Canvas>

        <TextBlock Text="{Binding ScoreText}"
                   Foreground="White"
                   FontSize="24"
                   FontWeight="Bold"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Margin="20,20,0,0"/>

        <!-- Player Lives Display -->
        <ItemsControl ItemsSource="{Binding Player.Lives, Converter={StaticResource IntToLoopConverter}}"
                      HorizontalAlignment="Right"
                      VerticalAlignment="Top"
                      Margin="0,20,20,0">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Image Source="ms-appx:///Assets/sprites/player/life/index.png"
                           Width="32"
                           Height="32"
                           Margin="5,0"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</Page>
