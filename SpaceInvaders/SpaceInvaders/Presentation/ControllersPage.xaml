<Page
    x:Class="SpaceInvaders.Presentation.ControllersPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ms-appx:///Styles/AppStyles.xaml"/>
                <ResourceDictionary Source="ms-appx:///Styles/ControllersStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="ms-appx:///Assets/background/background.png" Stretch="UniformToFill"/>
        </Grid.Background>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Controles"
                   Style="{StaticResource PageTitleStyle}" />

        <StackPanel Grid.Row="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Spacing="20">

            <StackPanel Orientation="Horizontal" Spacing="10">
                <TextBlock Text="Mover para Esquerda:" Style="{StaticResource ControlLabelStyle}" />
                <TextBlock Text="Seta para Esquerda / Tecla A" Style="{StaticResource ControlTextStyle}" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" Spacing="10">
                <TextBlock Text="Mover para Direita:" Style="{StaticResource ControlLabelStyle}" />
                <TextBlock Text="Seta para Direita / Tecla D" Style="{StaticResource ControlTextStyle}" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" Spacing="10">
                <TextBlock Text="Atirar:" Style="{StaticResource ControlLabelStyle}" />
                <TextBlock Text="Barra de Espaço" Style="{StaticResource ControlTextStyle}" />
            </StackPanel>

        </StackPanel>

        <Button Grid.Row="2"
                AutomationProperties.AutomationId="MainPageButton"
                Command="{Binding GoToMain}"
                Content="Return"
                Style="{StaticResource ReturnButtonStyle}" />
    </Grid>
</Page>
