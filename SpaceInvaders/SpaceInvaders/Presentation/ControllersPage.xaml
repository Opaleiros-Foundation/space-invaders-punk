<Page
    x:Class="SpaceInvaders.Presentation.ControllersPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ms-appx:///Styles/AppStyles.xaml" />
                <ResourceDictionary Source="ms-appx:///Styles/ControllersStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="ms-appx:///Assets/background/background.png" Stretch="UniformToFill" />
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            Style="{StaticResource PageTitleStyle}"
            Text="Controles" />

        <StackPanel
            Grid.Row="1"
            HorizontalAlignment="Center"
            Spacing="20"
            VerticalAlignment="Center">

            <StackPanel Orientation="Horizontal" Spacing="10">
                <TextBlock Style="{StaticResource ControlLabelStyle}" Text="Mover para Esquerda:" />
                <TextBlock Style="{StaticResource ControlTextStyle}" Text="Seta para Esquerda / Tecla A" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" Spacing="10">
                <TextBlock Style="{StaticResource ControlLabelStyle}" Text="Mover para Direita:" />
                <TextBlock Style="{StaticResource ControlTextStyle}" Text="Seta para Direita / Tecla D" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" Spacing="10">
                <TextBlock Style="{StaticResource ControlLabelStyle}" Text="Atirar:" />
                <TextBlock Style="{StaticResource ControlTextStyle}" Text="Barra de Espaço" />
            </StackPanel>

        </StackPanel>

        <Button
            AutomationProperties.AutomationId="MainPageButton"
            Command="{Binding GoToMain}"
            Content="Return"
            Grid.Row="2"
            Style="{StaticResource ReturnButtonStyle}" />
    </Grid>
</Page>
