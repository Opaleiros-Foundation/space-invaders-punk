<Page
    mc:Ignorable="d"
    x:Class="SpaceInvaders.Presentation.ScorePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:SpaceInvaders.Presentation"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:viewmodels="using:SpaceInvaders.Presentation"
    xmlns:models="using:SpaceInvaders.Models"
    xmlns:utu="using:Uno.Toolkit.UI">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="ms-appx:///Assets/background/background.png" Stretch="UniformToFill"/>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="High Scores" Style="{StaticResource TitleTextBlockStyle}" HorizontalAlignment="Center" Margin="0,20,0,0" Grid.Row="0" Foreground="White" FontSize="48" FontWeight="Bold"/>

        <Grid Grid.Row="1">
            <!-- Skeleton UI -->
            <ItemsControl ItemsSource="{x:Bind ViewModel.SkeletonItems}" Visibility="{x:Bind ViewModel.IsLoading}" Margin="20">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid ColumnDefinitions="Auto, *, Auto, Auto" Padding="10">
                            <Border Background="#33FFFFFF" Width="20" Height="20" Margin="0,0,10,0" CornerRadius="4"/>
                            <Border Background="#33FFFFFF" Width="120" Height="20" CornerRadius="4"/>
                            <Border Background="#33FFFFFF" Grid.Column="2" Width="80" Height="20" HorizontalAlignment="Right" CornerRadius="4"/>
                            <Border Background="#33FFFFFF" Grid.Column="3" Margin="20,0,0,0" Width="100" Height="20" CornerRadius="4"/>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- Actual List -->
            <ListView ItemsSource="{x:Bind ViewModel.Scores}" 
                      Visibility="{x:Bind ViewModel.IsLoaded}"
                      Margin="20" Background="#AA000000" BorderBrush="White" BorderThickness="2" CornerRadius="8">
                <ListView.HeaderTemplate>
                    <DataTemplate>
                        <Grid ColumnDefinitions="Auto, *, Auto, Auto" Padding="10" Background="#44FFFFFF">
                            <TextBlock Text="Rank" Grid.Column="0" Width="30" Margin="0,0,10,0" FontWeight="Bold" Foreground="White"/>
                            <TextBlock Text="Player" Grid.Column="1" Width="150" FontWeight="Bold" Foreground="White"/>
                            <TextBlock Text="Score" Grid.Column="2" Width="100" HorizontalAlignment="Right" FontWeight="Bold" Foreground="White"/>
                            <TextBlock Text="Date" Grid.Column="3" Margin="20,0,0,0" FontWeight="Bold" Foreground="White"/>
                        </Grid>
                    </DataTemplate>
                </ListView.HeaderTemplate>
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="models:ScoreDisplayItem">
                        <Grid ColumnDefinitions="Auto, *, Auto, Auto" Padding="10">
                            <TextBlock Text="{x:Bind Rank}" Grid.Column="0" Width="30" Margin="0,0,10,0" Foreground="White"/>
                            <TextBlock Text="{x:Bind PlayerName}" Grid.Column="1" Width="150" Foreground="White"/>
                            <TextBlock Text="{x:Bind PlayerScore}" Grid.Column="2" Width="100" HorizontalAlignment="Right" Foreground="White"/>
                            <TextBlock Text="{x:Bind DateAchievedFormatted}" Grid.Column="3" Margin="20,0,0,0" Foreground="White"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>

        <Button Content="Back to Main Menu" Grid.Row="2" HorizontalAlignment="Center" Margin="0,20,0,20" Click="BackToMainMenu_Click" Style="{StaticResource AccentButtonStyle}"/>
    </Grid>
</Page>

