<Page
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d"
    x:Class="SpaceInvaders.Presentation.GameOver"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:SpaceInvaders.Presentation"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="GAME OVER" FontSize="48" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>
            <TextBlock Text="{Binding ScoreText}" FontSize="36" Margin="0,0,0,40" HorizontalAlignment="Center"/>
            <TextBox Text="{Binding PlayerName, Mode=TwoWay}" PlaceholderText="Enter your name" Width="300" Margin="0,0,0,20" HorizontalAlignment="Center"/>
            <Button Content="Save Score" Command="{Binding SaveScoreCommand}" Margin="0,0,0,10" HorizontalAlignment="Stretch"/>
            <TextBlock Text="{Binding ConfirmationMessage}" FontSize="18" Margin="0,10,0,10" HorizontalAlignment="Center" Foreground="Green"/>
            <Button Content="Play Again" Command="{Binding PlayAgain}" Margin="0,0,0,10" HorizontalAlignment="Stretch"/>
            <Button Content="Return to Main Menu" Command="{Binding GoToMain}" HorizontalAlignment="Stretch"/>
        </StackPanel>
    </Grid>

</Page>

