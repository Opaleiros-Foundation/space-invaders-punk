<Page
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d"
    x:Class="SpaceInvaders.Presentation.GameOver"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:SpaceInvaders.Presentation"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Page.Resources>
        <ResourceDictionary Source="ms-appx:///Styles/GameOverStyles.xaml"/>
    </Page.Resources>

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="ms-appx:///Assets/background/background.png" Stretch="UniformToFill"/>
        </Grid.Background>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="GAME OVER" Style="{StaticResource GameOverTitleStyle}"/>
            <TextBlock Text="{Binding ScoreText}" Style="{StaticResource GameOverScoreStyle}"/>
            <TextBox Text="{Binding PlayerName, Mode=TwoWay}" PlaceholderText="Enter your name" Style="{StaticResource GameOverTextBoxStyle}"/>
            <Button Content="Save Score" Command="{Binding SaveScoreCommand}" Style="{StaticResource GameOverButtonStyle}"/>
            <TextBlock Text="{Binding ConfirmationMessage}" Style="{StaticResource GameOverConfirmationMessageStyle}"/>
            <Button Content="Play Again" Command="{Binding PlayAgain}" Style="{StaticResource GameOverButtonStyle}"/>
            <Button Content="Return to Main Menu" Command="{Binding GoToMain}" Style="{StaticResource GameOverButtonStyle}"/>
        </StackPanel>
    </Grid>

</Page>

