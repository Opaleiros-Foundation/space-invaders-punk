<Page
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d"
    x:Class="SpaceInvaders.Presentation.GameOver"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:SpaceInvaders.Presentation"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:utils="using:SpaceInvaders.Utils"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ms-appx:///Styles/GameOverStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid>
        <Grid.Background>
            <ImageBrush
                ImageSource="ms-appx:///Assets/background/gameover.png"
                Opacity="0.6"
                Stretch="UniformToFill" />
        </Grid.Background>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Style="{StaticResource GameOverTitleStyle}" Text="Vérme zhão ⸓ ánka rrís!" />
            <TextBlock
                Background="Black"
                Foreground="White"
                Style="{StaticResource GameOverScoreStyle}"
                Text="{Binding ScoreText}" />
            <TextBox
                PlaceholderText="Enter your name"
                Style="{StaticResource GameOverTextBoxStyle}"
                Text="{Binding PlayerName, Mode=TwoWay}" />
            <Button
                Command="{Binding SaveScoreCommand}"
                Content="Save Score"
                Style="{StaticResource GameOverSecondaryButtonStyle}" />
            <TextBlock
                Style="{StaticResource GameOverConfirmationMessageStyle}"
                Text="{Binding ConfirmationMessage}"
                Visibility="{Binding ConfirmationVisibility}" />
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <Button
                    Command="{Binding PlayAgain}"
                    Content="Play Again"
                    Style="{StaticResource GameOverPrimaryButtonStyle}" />
                <Button
                    Command="{Binding GoToMain}"
                    Content="Return to Main Menu"
                    Style="{StaticResource GameOverSecondaryButtonStyle}" />
            </StackPanel>
        </StackPanel>
    </Grid>

</Page>

